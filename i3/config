# Shutdown, Reboot, Lock Screen, and Logout #657b83
set $sysmenu "system:  [P]oweroff  re[B]oot  [L]ock  [S]uspend "
bindsym $mod+Shift+Return      mode $sysmenu
mode $sysmenu {
    bindsym p         exec systemctl poweroff
    bindsym b         exec systemctl reboot
    bindsym l         exec slimlock, mode "default"
    bindsym s         exec systemctl suspend
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

