    separator_height = 2;

    separator_color = auto

    padding = 1
    horizontal_padding = 9


[shortcuts]
    close = mod4+x
    close_all = mod4+ctrl+x
    history = mod4+grave

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the '#' and following  would be interpreted as a comment.
    background = "#aaaaff"
    foreground = "#000000"
    timeout = 10

[urgency_normal]
    background = "#1793D1"
    foreground = "#DDDDDD"
    timeout = 10

[urgency_critical]
    background = "#ffaaaa"
    foreground = "#000000"
    timeout = 0

[ignore]
    appname = "Spotify"
    summary = "*"
    format = ""
